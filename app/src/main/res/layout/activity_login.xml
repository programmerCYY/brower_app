    <EditText
        android:id="@+id/id_et_password"
        android:layout_width="230dp"
        android:layout_height="56dp"
        android:layout_below="@id/id_et_username"
        android:layout_marginTop="14dp"
        android:layout_centerHorizontal="true"
        android:hint="请输入密码"
        android:inputType="textWebPassword"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />


    <Button
        android:id="@+id/id_btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_et_password"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_button"
        android:text="确定"
        android:textColor="@color/text_white"
        android:textSize="18sp"/>

    <TextView
            android:id="@+id/id_btn_regetpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_btn_login"
            android:layout_alignStart="@id/id_btn_login"
            android:layout_marginTop="30dp"
            android:text="找回密码"
            android:textColor="#ffffff" />
    <TextView
        android:id="@+id/id_btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_btn_login"
        android:layout_alignEnd="@id/id_btn_login"
        android:layout_marginTop="30dp"
        android:text="手机注册"
        android:textColor="#ffffff" />


</RelativeLayout>
