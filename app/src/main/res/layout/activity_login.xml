    <ImageView
            android:id="@+id/user_pic_big"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="140dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/browser_logo"
            />

    <View
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_below="@id/user_pic_big"
            android:layout_marginTop="27dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_background"/>

    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toStartOf="@id/id_et_username"
            android:layout_alignTop="@id/id_et_username"
            android:layout_marginTop="8dp"
            android:src="@mipmap/ic_me"
            android:scaleX="0.7"
            android:scaleY="0.7"/>

    <EditText
            android:id="@+id/id_et_username"
            android:layout_width="230dp"
            android:layout_height="56dp"
            android:layout_below="@id/user_pic_big"
            android:layout_marginTop="27dp"
            android:layout_centerHorizontal="true"
            android:hint="请输入账号"
            android:inputType="text"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />
    <View
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_below="@id/id_et_username"
            android:layout_marginTop="14dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_background"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toStartOf="@id/id_et_password"
            android:layout_alignTop="@id/id_et_password"
            android:src="@mipmap/ic_lock_closed"
            android:layout_marginTop="8dp"
            android:scaleX="0.7"
            android:scaleY="0.7"/>

<!--    <com.google.android.material.textfield.TextInputLayout-->
